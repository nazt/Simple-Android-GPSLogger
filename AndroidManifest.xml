<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.prom2m.android.gpslogger" android:versionCode="1"
	android:versionName="0.1.0">

	<application android:icon="@drawable/gpslogger48" android:label="@string/app_name">
		<activity android:name=".GPSLoggerActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<service android:name=".service.GPSLoggerService"
			android:permission="android.permission.ACCESS_FINE_LOCATION"
			android:label="@string/service_name" android:exported="true"
			android:enabled="true"></service>
	</application>
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
</manifest> 